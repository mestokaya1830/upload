    style.
      *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        text-decoration: none;
      }
      body{
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #ccc;
      }
      .wrapper{
        width: 430px;
        padding: 30px;
        background-color: #fff;
        border-radius: 5px ;
      }
      .wrapper header{
        color: #6990f2;
        font-size: 27px;
        font-weight: 600;
        text-align: center;
      }
      .wrapper form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 176px;
        margin: 30px 0;
        border: 2px dashed #6990f2;
        border-radius: 5px;
        position:relative;
      }
      form :where(i, p){
        color:#6990f2;
      }
      form i{
        font-size: 50px;
      }
      form p{
        font-size: 17px;
        margin-top: 17px;
      }
      #file{
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        cursor:pointer;
        opacity:0;
      }
      ul .row{
        display: flex;
        flex-direction:column;
        justify-content: space-between;
        align-items: center;
        border-radius: 5px;
        list-style: none;
        background-color: #e9f0ff;
        margin-bottom: 10px;
      }
      ul .details{
        display:flex;
        justify-content:space-between;
        align-items:center;
        width:100%;
        padding:5px;
      }
      .uploaded-area{
        max-height:200px;
        overflow:auto;
      }
      ul .upload-end{
        display:flex;
        justify-content:space-between;
        align-items:center;
        width:100%;
        padding:10px;
        background-color: #e9f0ff;
        margin:5px 0;
        border:1px solid #ccc;
        border-radius:3px;
      }
      ul .row i{
        font-size: 30px;
        color: #6990f2;
      }
      ul .bar{
        display:flex;
        width:100%;
        padding:3px;
        border:1px solid #ccc;
        border-radius:3px;
        margin-top:5px;
      }
      .prog{
        background-color:lightblue;
        height:8px;
        border-radius:3px;
      }
      #submit{
        position:absolute;
        top:-30px;
        right:0;
      }

